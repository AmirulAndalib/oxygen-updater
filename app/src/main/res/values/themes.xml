<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- TODO(compose): remove appcompat/Material dependents -->
	<style name="Theme.OxygenUpdater" parent="Theme.Material3.DayNight.NoActionBar">
		<item name="colorSurface">@color/background</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorSecondaryVariant">@color/colorSecondary</item>
		<item name="colorAccent">@color/colorSecondary</item>
		<item name="android:colorAccent">@color/colorSecondary</item>
		<item name="colorError">@color/colorError</item>
		<item name="colorOutline">@color/backgroundVariant</item>
		<item name="colorOnSurfaceVariant">@color/foreground</item>

		<!-- Disable Material You's elevation-based colorPrimary tinting -->
		<item name="elevationOverlayEnabled">false</item>
		<item name="elevationOverlayColor">@color/foreground</item>

		<item name="appBarLayoutStyle">@style/AppBarLayout</item>
		<item name="toolbarStyle">@style/Toolbar</item>
		<item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
		<item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
		<item name="bottomNavigationStyle">@style/BottomNavigationView</item>
		<item name="snackbarStyle">@style/ThemeOverlay.Material3.Snackbar</item>

		<item name="android:windowBackground">?colorSurface</item>

		<!-- For visual continuity between the app and the navigation bar, set to the window background -->
		<item name="android:navigationBarColor">?colorSurface</item>
		<!-- For visual continuity between the app and the status bar, set to the window background -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

		<item name="android:textColorTertiary">@color/foreground</item>
		<item name="android:textColorTertiaryInverse">?android:windowBackground</item>

		<item name="android:scrollbarStyle">insideOverlay</item>
		<item name="android:scrollbarSize">2dp</item>
		<item name="android:scrollbarThumbHorizontal">@color/scrollbar</item>
		<item name="android:scrollbarThumbVertical">@color/scrollbar</item>

		<item name="android:lineSpacingExtra">4dp</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowSharedElementsUseOverlay">false</item>
		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<!--<item name="android:windowExitTransition">@transition/explode</item>-->
	</style>

	<style name="Theme.OxygenUpdater.Light" parent="Theme.OxygenUpdater">
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
	</style>

	<style name="Theme.OxygenUpdater.DayNight" parent="Theme.OxygenUpdater.Light" />

	<style name="Theme.OxygenUpdater.DayNight.Main">
		<!-- For visual continuity between the app and the navigation bar, set to bottom nav colour -->
		<item name="android:navigationBarColor">@color/backgroundVariant</item>
	</style>

</resources>
